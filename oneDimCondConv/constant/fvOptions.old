FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant/heater";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


options
{

    energySource
    {
        type            scalarSemiImplicitModSource;
        //type            scalarSemiImplicitSource; // v7 
        
        active          yes;

        timeStart       0;
        duration        1e10;
        selectionMode   all;
        volumeMode      specific;//absolute; // specific
        
        // as per equaiton in the modified solver
        // Explicit source = n^2*Tinf*V
        // Implicit source = -n^2*V
        //  n^2 = 25, Tinf = 20
        // cell volume, V = 0.2 m^3
        
        forceImplicitSp true; // force Sp instead of Sup for implicit term
        
        injectionRateSuSp
        {
            T (500 -25);
        }
    }
}

